-- =============================================
--  WindUI - Simple Example Script
--  Paste this into your executor
-- =============================================

-- Load WindUI
local WindUI = loadstring(game:HttpGet(
    "https://github.com/Footagesus/WindUI/releases/latest/download/main.lua"
))()

-- =============================================
--  1. Create the Window
-- =============================================
local Window = WindUI:CreateWindow({
    Title  = "My Hub",
    Icon   = "star",          -- lucide icon name
    Author = "by YourName",
    Theme  = "Dark",          -- built-in theme
    Acrylic = true,           -- frosted-glass background
    Resizable = true,
    ToggleKey = Enum.KeyCode.RightControl, -- press to show/hide
})

-- =============================================
--  2. Create Tabs
-- =============================================
local MainTab    = Window:CreateTab({ Title = "Main",    Icon = "home" })
local PlayerTab  = Window:CreateTab({ Title = "Player",  Icon = "user" })
local SettingsTab = Window:CreateTab({ Title = "Settings", Icon = "settings" })

-- =============================================
--  3. Main Tab  — buttons & toggles
-- =============================================
local MainSection = MainTab:Section({ Title = "General" })

-- Button
MainSection:Button({
    Title   = "Print Hello",
    Description = "Prints a message to the console",
    Callback = function()
        print("Hello from WindUI!")
    end,
})

-- Toggle
local SpamEnabled = false
MainSection:Toggle({
    Title   = "Spam Toggle",
    Description = "Enable or disable the spam",
    Default = false,
    Callback = function(value)
        SpamEnabled = value
        print("Spam:", SpamEnabled)
    end,
})

-- Slider
MainSection:Slider({
    Title   = "Speed",
    Description = "Set walk speed",
    Min     = 16,
    Max     = 100,
    Default = 16,
    Callback = function(value)
        game.Players.LocalPlayer.Character.Humanoid.WalkSpeed = value
    end,
})

-- =============================================
--  4. Player Tab — input & dropdown
-- =============================================
local PlayerSection = PlayerTab:Section({ Title = "Teleport" })

-- Text Input
PlayerSection:Input({
    Title       = "Teleport to Player",
    Description = "Enter a username",
    Placeholder = "Username...",
    Callback = function(text)
        local target = game.Players:FindFirstChild(text)
        if target and target.Character then
            game.Players.LocalPlayer.Character:SetPrimaryPartCFrame(
                target.Character.PrimaryPart.CFrame
            )
            print("Teleported to", text)
        else
            print("Player not found:", text)
        end
    end,
})

-- Dropdown
PlayerSection:Dropdown({
    Title   = "Jump Power",
    Description = "Choose a jump power preset",
    Options = { "Default (50)", "High (100)", "Super (200)", "Off (0)" },
    Default = "Default (50)",
    Callback = function(option)
        local map = {
            ["Default (50)"] = 50,
            ["High (100)"]   = 100,
            ["Super (200)"]  = 200,
            ["Off (0)"]      = 0,
        }
        game.Players.LocalPlayer.Character.Humanoid.JumpPower = map[option]
        print("Jump power set to", map[option])
    end,
})

-- =============================================
--  5. Settings Tab — theme & info
-- =============================================
local SettingsSection = SettingsTab:Section({ Title = "Appearance" })

SettingsSection:Dropdown({
    Title   = "Theme",
    Description = "Change the UI theme",
    Options = { "Dark", "Light", "Aqua", "Rose" },
    Default = "Dark",
    Callback = function(theme)
        Window:SetTheme(theme)
    end,
})

SettingsSection:Paragraph({
    Title   = "About",
    Content = "This is a simple WindUI example.\nPress RightControl to toggle visibility.",
})

-- =============================================
--  Done! Window opens automatically.
-- =============================================
print("WindUI loaded! Press RightControl to toggle.")
