local tweenService = game:GetService("TweenService")
local player = game.Players.LocalPlayer


local function safeTeleport(targetCFrame)
    local character = player.Character
    if not character or not character:FindFirstChild("HumanoidRootPart") then return end
    
    local hrp = character.HumanoidRootPart
    local distance = (targetCFrame.Position - hrp.Position).Magnitude
    local speed = 250
    local duration = distance / speed

    local bv = Instance.new("BodyVelocity")
    bv.Velocity = Vector3.new(0, 0, 0)
    bv.MaxForce = Vector3.new(9e9, 9e9, 9e9)
    bv.Parent = hrp


    local noclipLoop = game:GetService("RunService").Stepped:Connect(function()
        for _, part in pairs(character:GetDescendants()) do
            if part:IsA("BasePart") then
                part.CanCollide = false
            end
        end
    end)

    local tween = tweenService:Create(hrp, TweenInfo.new(duration, Enum.EasingStyle.Linear), {CFrame = targetCFrame})
    
    tween:Play()
    
    tween.Completed:Connect(function()
        bv:Destroy()
        noclipLoop:Disconnect()

        for _, part in pairs(character:GetDescendants()) do
            if part:IsA("BasePart") then
                part.CanCollide = true
            end        end
    end)
end


for _, location in ipairs(locations) do
    TeleportSection:Button({
        Title = location.name,
        Callback = function()
            safeTeleport(location.cframe)
        end,
    })
end


local WaterPart = Instance.new("Part")
WaterPart.Size = Vector3.new(50, 0.2, 50) -- بسیار نازک برای جلوگیری از گیر کردن
WaterPart.Transparency = 1
WaterPart.Anchored = true
WaterPart.CanCollide = false
WaterPart.Parent = workspace

local function UpdateWaterWalk(value)
    _G.WaterWalk = value
    if value then        task.spawn(function()
            while _G.WaterWalk do
                local char = game.Players.LocalPlayer.Character
                local hrp = char and char:FindFirstChild("HumanoidRootPart")                local hum = char and char:FindFirstChild("Humanoid")
                
                if hrp and hum then
                    local currentPos = hrp.Position
                    
                    -- اگر پلیر خیلی عمیق رفت (مثلاً با Flash Step)، او را به بالا پرتاب کن
                    if currentPos.Y < -2 then
                        hrp.Velocity = Vector3.new(hrp.Velocity.X, 40, hrp.Velocity.Z)
                        WaterPart.CanCollide = false -- غیرفعال کردن موقت برای عبور از پارت به سمت بالا
                    else
                        -- تنظیم پارت در سطح آب (ارتفاع 0 استاندارد بلوکس فروت است)
                        WaterPart.CanCollide = true
                        WaterPart.CFrame = CFrame.new(currentPos.X, -0.8, currentPos.Z)
                    end
                    
                    -- جلوگیری از حالت شنا
                    if hum:GetState() == Enum.HumanoidStateType.Swimming or currentPos.Y < 0 then
                        hum:ChangeState(Enum.HumanoidStateType.Running)
                    end
                end
                task.wait() -- سرعت بالای چک کردن برای جلوگیری از فرو رفتن
            end
            WaterPart.CanCollide = false
        end)
    else
        WaterPart.CanCollide = false
    end
end
local WaterWalk = Practical:Toggle({
    Title = "راه‌رفتن روی آب",
    Value = true,
    Callback = UpdateWaterWalk
})

-- اجرای خودکار در شروع
if WaterWalk.Value then
    UpdateWaterWalk(true)
end

-- اضافه کردن بخش مبارزه به تب کاربردیlocal CombatSection = Practical:Section({ Title = "مبارزه (Combat)" })

local function GetCurrentTool()
    local char = game.Players.LocalPlayer.Character
    if char then
        local tool = char:FindFirstChildOfClass("Tool")
        -- چک کردن اینکه آیا وسیله در دست Melee است (در بلوکس فروت Meleeها معمولاً فاقد فیلد ToolTip خاص هستند یا نام مشخصی دارند)
        if tool and (tool:FindFirstChild("Attack") or tool:FindFirstChild("Main")) then
            return tool
        end
    end
    return nil
end

local AutoDamageToggle = Practical:Toggle({
    Title = "دمیج خودکار (Kill Aura)",
    Value = false,
    Callback = function(state)
        _G.AutoDamage = state
        
        if state then
            task.spawn(function()
                while _G.AutoDamage do
                    local char = game.Players.LocalPlayer.Character
                    local hrp = char and char:FindFirstChild("HumanoidRootPart")
                    local tool = GetCurrentTool()

                    if hrp and tool then
                        -- جستجو برای دشمنان در نزدیکی (شعاع 30 متری)
                        for _, enemy in pairs(workspace.Enemies:GetChildren()) do
                            local e_hrp = enemy:FindFirstChild("HumanoidRootPart")
                            local e_hum = enemy:FindFirstChild("Humanoid")
                            
                            if e_hrp and e_hum and e_hum.Health > 0 then
                                local dist = (hrp.Position - e_hrp.Position).Magnitude
                                if dist < 30 then
                                    -- ریموت اصلی حمله در Blox Fruits
                                    game:GetService("ReplicatedStorage").RigControllerEvent:FireServer("Attack")
                                    
                                    -- لرزش دوربین یا افکت کلیک (اختیاری برای پایداری)
                                    -- game:GetService("VirtualUser"):ClickButton1(Vector2.new(0,0))
                                end
                            end
                        end
                    end
                    task.wait(0.1) -- سرعت حمله (کمتر = سریع‌تر)
                end
            end)        end
    end
})
